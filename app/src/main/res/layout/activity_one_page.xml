<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.seedxyx.noteinfingers.activity.OnePageAty">
<LinearLayout
    android:id="@+id/visualLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:background="@drawable/head1"
        android:layout_weight="1"
        android:gravity="start"
        android:textSize="20sp"
        android:id="@+id/bookName"
        android:layout_width="fill_parent"
        android:layout_height="0dp" />
    <ScrollView
        android:scrollbars="none"
        android:background="@drawable/content1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="15">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_gravity="left"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
    </ScrollView>
    <TextView
        android:background="@drawable/end1"
        android:layout_weight="1"
        android:textSize="20sp"
        android:gravity="end"
        android:id="@+id/pageNumber"
        android:layout_width="fill_parent"
        android:layout_height="0dp" />
</LinearLayout>

<RelativeLayout
    android:id="@+id/hiddenLayout"
    android:background="@drawable/bk_button"
    android:layout_width="fill_parent"
    android:layout_height="200dp">
    <Button
        android:background="@drawable/camera_button"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btnCamera"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <Button
        android:layout_alignParentTop="true"
        android:background="@drawable/video_button"
        android:layout_marginTop="10dp"
        android:id="@+id/btnVideo"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <Button
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/radio_button"
        android:id="@+id/btnSound"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    </RelativeLayout>

<LinearLayout
    android:paddingTop="5dp"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:id="@+id/hiddenLayout2">
    <Button
        android:id="@+id/btnDelete"
        android:background="@drawable/delete_button"
        android:layout_width="fill_parent"
        android:layout_height="80dp" />
    </LinearLayout>
</LinearLayout>
